<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.callerid.elconfig.MainActivity">

    <TextView
        android:id="@+id/lbTitle"
        android:layout_width="57dp"
        android:layout_height="18dp"
        android:layout_marginLeft="24dp"
        android:text="Your IP:"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/lbSuggestedIP"
        android:layout_width="210dp"
        android:layout_height="17dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="20dp"
        android:text="Suggested: 192.168.0.90"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="350dp"
        android:layout_height="28dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="ELConfig Android Edition"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="166dp"
        android:layout_height="39dp"
        android:text="Use Suggested IP"
        tools:layout_editor_absoluteX="220dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/lbSuggestedIP" />

    <EditText
        android:id="@+id/tbUnitIP"
        android:layout_width="119dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="[enter IP address]"
        android:inputType="text"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:layout_editor_absoluteX="86dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IP Settings"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />
</android.support.constraint.ConstraintLayout>
