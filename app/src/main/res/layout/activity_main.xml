<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.callerid.elconfig.MainActivity">

    <Button
        android:id="@+id/btnK"
        android:layout_width="40dp"
        android:layout_height="48dp"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="8dp"
        android:enabled="false"
        android:text="K"
        android:textAllCaps="false"
        app:layout_constraintLeft_toRightOf="@+id/btnB"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btnB"
        android:layout_width="40dp"
        android:layout_height="48dp"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="8dp"
        android:enabled="false"
        android:text="B"
        android:textAllCaps="false"
        app:layout_constraintLeft_toRightOf="@+id/btnO"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btnO"
        android:layout_width="40dp"
        android:layout_height="48dp"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="8dp"
        android:enabled="false"
        android:text="O"
        android:textAllCaps="false"
        app:layout_constraintLeft_toRightOf="@+id/btnS"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btnS"
        android:layout_width="40dp"
        android:layout_height="48dp"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="8dp"
        android:enabled="false"
        android:text="S"
        android:textAllCaps="false"
        app:layout_constraintLeft_toRightOf="@+id/btnA"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btnA"
        android:layout_width="40dp"
        android:layout_height="48dp"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="8dp"
        android:enabled="false"
        android:text="A"
        android:textAllCaps="false"
        app:layout_constraintLeft_toRightOf="@+id/btnD"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/lbTitle"
        android:layout_width="57dp"
        android:layout_height="18dp"
        android:layout_marginLeft="24dp"
        android:text="Your IP:"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:layout_marginStart="24dp" />

    <TextView
        android:id="@+id/lbSuggestedIP"
        android:layout_width="210dp"
        android:layout_height="17dp"
        android:layout_marginLeft="32dp"
        android:text="Suggested: 192.168.0.90"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/textView4"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="266dp"
        android:layout_height="29dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="ELConfig for Android"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="151dp"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:text="Use Suggested IP"
        app:layout_constraintLeft_toRightOf="@+id/tbIPAddress"
        app:layout_constraintTop_toBottomOf="@+id/lbSuggestedIP" />

    <EditText
        android:id="@+id/tbUnitIP"
        android:layout_width="74dp"
        android:layout_height="37dp"
        android:ems="10"
        android:hint="[code]"
        android:inputType="number"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@+id/btnT3"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/tbIPAddress"
        android:layout_width="119dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="[enter IP address]"
        android:inputType="text"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintLeft_toRightOf="@+id/lbTitle"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IP Settings"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toggles"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnGetToggles"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/btnT3"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="T3"
        app:layout_constraintLeft_toRightOf="@+id/btnT2"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnT2"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="T2"
        app:layout_constraintLeft_toRightOf="@+id/btnT1"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnT1"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_marginStart="86dp"
        android:text="T1"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        android:layout_marginLeft="86dp"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnAdvanced"
        android:layout_width="171dp"
        android:layout_height="48dp"
        android:text="Advanced Settings"
        android:layout_marginStart="29dp"
        app:layout_constraintLeft_toRightOf="@+id/btnGetToggles"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/lbTitle" />

    <Button
        android:id="@+id/btnGetToggles"
        android:layout_width="152dp"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Retreive Toggles"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbTitle" />

    <Button
        android:id="@+id/btnD"
        android:layout_width="40dp"
        android:layout_height="48dp"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="8dp"
        android:enabled="false"
        android:text="D"
        android:textAllCaps="false"
        app:layout_constraintLeft_toRightOf="@+id/btnU"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btnU"
        android:layout_width="40dp"
        android:layout_height="48dp"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="8dp"
        android:enabled="false"
        android:text="U"
        android:textAllCaps="false"
        app:layout_constraintLeft_toRightOf="@+id/btnC"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btnC"
        android:layout_width="40dp"
        android:layout_height="48dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:enabled="false"
        android:text="C"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Spinner
        android:id="@+id/sprLineCount"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/btnAdvanced"
        android:layout_marginStart="5dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Line Count:"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/btnGetToggles"
        android:layout_marginStart="62dp" />

    <TableLayout
        android:layout_width="658dp"
        android:layout_height="100dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnA"
        tools:layout_editor_absoluteY="260dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:paddingRight="10dp"
                android:text="Ln" />

            <TextView
                android:paddingRight="10dp"
                android:text="I/O" />

            <TextView
                android:paddingRight="10dp"
                android:text="S/E" />

            <TextView
                android:paddingRight="20dp"
                android:text="Dur" />

            <TextView
                android:paddingRight="10dp"
                android:text="CS" />

            <TextView
                android:paddingRight="15dp"
                android:text="Ring" />

            <TextView
                android:paddingRight="15dp"
                android:text="Date" />

            <TextView
                android:paddingRight="40dp"
                android:text="Time" />

            <TextView
                android:paddingRight="95dp"
                android:text="Number" />

            <TextView
                android:paddingRight="95dp"
                android:text="Name" />
        </TableRow>

        <ScrollView
            android:id="@+id/svCallLog"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableLayout
                android:id="@+id/tableCallLog"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </TableLayout>

        </ScrollView>


    </TableLayout>

</android.support.constraint.ConstraintLayout>
